<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dato_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dato"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <TextView
            android:id="@+id/subtitle_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />

        <TextView
            android:id="@+id/title_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />

        <TextView
            android:id="@+id/tid_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tid"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <ImageView
            android:id="@+id/aktivitet_billede"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            />

        <TextView
            android:id="@+id/beskrivelse_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beskrivelse"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/interesseret_tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="interesseret"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>