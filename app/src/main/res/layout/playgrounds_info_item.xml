<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/material_on_primary_emphasis_medium"
    tools:context=".view.playgrounds.PlaygroundsFragment">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/future_playground_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/future_playground_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_weight="1"

            />

        <TextView
            android:id="@+id/future_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_weight="1"
            android:text="Kontakt Person information"
            />

        <TextView
            android:id="@+id/future_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/legepladser_info_img_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playground_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fabSize="mini"
            android:layout_margin="2dp"
            android:elevation="0dp"
            app:borderWidth="0dp"
            android:src="@drawable/ic_close"
            app:backgroundTint="@color/white"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>